{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "ci:build:production": {
      "dependsOn": ["^build"]
    },
    "ci:build:staging": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "test": {},
    "start:dev": {
      "cache": false,
      "persistent": true
    },
    "graphql:generate": {},
    "db:start:docker": {}
  }
}
